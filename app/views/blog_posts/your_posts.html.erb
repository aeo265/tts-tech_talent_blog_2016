<p id="notice"><%= notice %></p>

<h1>Current Blog Posts</h1>
There are <%=@blog_posts.count %> Blog Posts<br>


    <div class="row">
      <% @blog_posts.each do |blog_post| %>
        <div class="col-md-6">
          <div class="panel panel-info">
            <div class="panel-heading">

                  <b><%= link_to blog_post.title, blog_post%></b>

            </div>

            <div class="panel-body">
              by <b><%= blog_post.user.username %></b><br>
              <%= blog_post.blog_entry[0..500] %> ... [<%= link_to 'Read More', blog_post%>]
              <%#= blog_post.category %>
            </div>
            <div class="panel-footer">
              <td><%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
              <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

<br>

<%= link_to 'New Blog Post', new_blog_post_path %>
